<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white"
    android:orientation="vertical"
    tools:context=".Actividad_Fallida">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_red"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/aciertos_fallida"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/text_purple_dark"
        android:textStyle="bold"
        android:text="¡No te rindas!"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:justificationMode="inter_word"
        android:text="Toma un regalo por tu esfuerzo"
        android:textStyle="bold"
        android:textColor="@color/text_purple_dark"
        android:textSize="20sp" />

    <ListView
        android:layout_width="360dp"
        android:layout_height="245dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="¿Quieres intentarlo de nuevo?"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_seguir_practicando"
        android:layout_width="259dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_green"
        android:text="Seguir Practicando"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btn_ahora_no"
        android:layout_width="259dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/round_gray"
        android:text="Ahora no"
        android:textColor="@color/text_purple_dark"
        app:backgroundTint="@null" />


</LinearLayout>

